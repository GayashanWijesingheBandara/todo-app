        "@types/node": "^20.10.4",
        "@types/jest": "^29.5.8",
        "@types/supertest": "^2.0.16",
        "typescript": "^5.3.3",
        "ts-node-dev": "^2.0.0",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "eslint": "^8.55.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
